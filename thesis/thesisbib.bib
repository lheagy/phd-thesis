issn = {00168033},
journal = {Geophysics},
number = {3},
pages = {WA65},
title = {{Rock quality assessment using the effect of mud-filtrate invasion on conflicting borehole resistivity measurements}},
volume = {77},
year = {2012}
}
@article{wuhabashy1994,

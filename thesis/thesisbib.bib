file = {:Users/lindseyjh/git/Library/1.2923730.pdf:pdf},
isbn = {9781622760657},
journal = {Symposium on the Application of Geophysics to Engineering and Environmental Problems},
pages = {886--891},
title = {{The Application of Air, Ground and ‘In River' Electromagnetics in the Definition of Spatial Patterns of Groundwater Induced Salt Accumulation in a Salinising Floodplain, Lower River Murray, South Australia}},
url = {http://link.aip.org/link/SAGEEP/v19/i1/p886/s1{\&}Agg=doi},
year = {2006}
}
@article{Overton2004,

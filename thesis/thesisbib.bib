file = {:Users/lindseyjh/git/Library/BookpurnongFloodplainHealth:},
isbn = {0067-1924},
issn = {00671924},
journal = {Australian Journal of Botany},
keywords = {flooding,floodplain vegetation health,integrated studies,saline groundwater},
